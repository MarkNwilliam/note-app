<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/User_Image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/ic_user"
        android:layout_gravity="center"
        />
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

        <com.google.android.material.textfield.TextInputLayout
            android:background="#ECEAEA"
            android:layout_marginLeft="50dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/colorText"
            android:focusable="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_Name"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Enter Your User Name"
                android:inputType="text"
                android:ems="10"
                android:layout_marginTop="10dp"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:background="#ECEAEA"
            android:layout_marginLeft="50dp"
            android:layout_width="300dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/colorText"
            android:focusable="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_course"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Enter Your Course"
                android:inputType="text"
                android:ems="10"
                android:layout_marginTop="10dp"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:background="#ECEAEA"
            android:layout_marginLeft="50dp"
            android:layout_width="300dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/colorText"
            android:focusable="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_year"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Year 1,2,3,4 or non"
                android:inputType="text"
                android:ems="10"
                android:layout_marginTop="10dp"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:background="#ECEAEA"
            android:layout_marginLeft="50dp"
            android:layout_width="300dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/colorText"
            android:focusable="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_Status"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Student or Lecture"
                android:inputType="text"
                android:ems="10"
                android:layout_marginTop="10dp"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="20dp"
        android:background="#ECEAEA"
        android:layout_marginLeft="50dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:textColorHint="@color/colorText"
        android:focusable="true">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txt_Email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Enter Your Email Please"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:textSize="20sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:background="#ECEAEA"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        app:passwordToggleEnabled="true"
        android:textColorHint="@color/colorText"
        android:focusable="true">
        <com.google.android.material.textfield.TextInputEditText

            android:id="@+id/txt_Password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Enter Your Passsword Please"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:textSize="20sp" />


    </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:background="#ECEAEA"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            app:passwordToggleEnabled="true"
            android:textColorHint="@color/colorText"
            android:focusable="true">
            <com.google.android.material.textfield.TextInputEditText

                android:id="@+id/txt_Confirmed_Password"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Confirm Your Passsword Please"
                android:inputType="textPassword"
                android:ems="10"
                android:layout_marginTop="10dp"
                android:textSize="20sp" />


        </com.google.android.material.textfield.TextInputLayout>
<Button
    android:layout_marginLeft="100dp"
    android:layout_marginTop="30dp"
    android:layout_width="200dp"
    android:text="CREATE ACCOUNT"
    android:onClick="createAccount"
    android:background="@drawable/button_round"
    android:layout_height="wrap_content"/>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>